<a href="#document-metadata" class="items-content-button">Metadata</a>
{% if data %}
    <a href="#document-text" class="items-content-button">Document text</a>
{% endif %}
{% if exhibit %}
<a href="#document-map" class="items-content-button">Map</a>
{% endif %}

<div id="document-metadata" class="clearfix">
    <div id="content-files">
        {% if images %}
            <div id="photogallery" itemscope="" itemtype="http://schema.org/ImageGallery">
                {% for image in images %}
                    <figure class="gallery-item" itemprop="associatedMedia" itemscope="" itemtype="http://schema.org/ImageObject">
                        <a itemprop="contentUrl" href="{{ image.path }}" data-size="{{ image.resolution }}">
                            <img src="{{ image.thumb }}" alt="{{ image.name }}" title="{{ image.name }}">
                        </a>
                    </figure>
                {% endfor %}
            </div>
            <div id="content-files-zoom-icon" class="material-icons">zoom_in</div>
            <div id="content-files-gallery-icon" class="material-icons">insert_drive_file</div>
            <div id="content-files-counter">{{ images|length }}</div>
        {% endif %}
    </div>

    <h3>Metadata</h3>
    <div class="element-metadata-field">{{ identifier }}</div>
    <div class="element-metadata-field">{{ metadata | join(' | ') }}</div>
    <div class="element-metadata-field">{{ source }}</div>
    <div class="contentDescription">{{ description }}</div>
</div>

<div class="document-text" id="document-text">
    <div id="content-info">

    </div>
    <h3>Document text</h3>
    <ol class="tabs clearfix" id="language-selector">
        {% for lang, text in data|sort %}
            {% if loop.first %}
                <li><a class="element-text-language-selected" href="#document-text-{{ lang }}">{{ lang|lang2name }}</a></li>
            {% else %}
                <li><a class="element-text-language" href="#document-text-{{ lang }}">{{ lang|lang2name }}</a></li>
            {% endif %}
        {% endfor %}
    </ol>

    <div class="all-item-texts">
        {% for lang, text in data %}
            <div class="text-item element-text-document" id="document-text-{{ lang }}">{{ text|raw }}</div>
        {% endfor %}
    </div>

    {% if exhibit %}
        <div id="document-map">
            <h3 class="document-map">Map</h3>
            <a id="map-toggle-fullscreen" href="/neatline/fullscreen/{{ exhibit.slug }}">
                <span class="map-document-text">Toggle fullscreen</span>
                <div id="map-toggle-fullscreen-icon" class="material-icons">fullscreen</div>
            </a>
            <iframe class="element-map" src="/neatline/fullscreen/{{ exhibit.slug }}" width=100% height="410" frameborder="0" allowfullscreen></iframe>
        </div>
    {% endif %}
</div>

