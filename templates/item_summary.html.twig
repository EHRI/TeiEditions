<div class="item-summary">
    <a href="{{ url }}">
        {% if record_image %}
            {{ record_image|raw }}
        {% else %}
            <div class="item-summary-image-blank"></div>
        {% endif %}
    </a>
    <div class="item-summary-wrapper">
        <div class="item-summary-title">
            <a class="item-summary-link" href="{{ url }}">{{ title }}</a>
        </div>
        {% include "metadata.html.twig" with {'truncate': true} %}
    </div>
</div>
